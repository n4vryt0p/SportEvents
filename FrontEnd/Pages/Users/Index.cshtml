@page "{handler?}"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Users</h5>
            </div>
            <div class="card-body">
                <div class="input-group mb-3">
                    <span class="input-group-text">First and last name</span>
                    <input type="text" aria-label="First name" class="form-control" name="firstName" value="@Model.Users?.FirstName">
                    <input type="text" aria-label="Last name" class="form-control" name="lastName" value="@Model.Users?.LastName">
                </div>
                
                <div>
                    <label for="basiInput" class="form-label">Email</label>
                    <input type="email" aria-label="Email" class="form-control" id="email" name="email" value="@Model.Users?.Email">
                </div>
                <input type="hidden" value="@Model.Users?.Id" />
            </div>
            <div class="card-footer">
                <button class="btn btn-primary float-end" onclick="save();">Save</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!--datatable js-->
    <script src="~/js/dx.all.js"></script>
    <script src="~/js/dx.aspnet.data.js"></script>
    <script src="~/js/role-page.js"></script>
}