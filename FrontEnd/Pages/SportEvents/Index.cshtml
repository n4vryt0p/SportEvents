@page "{handler?}"
@model IndexModel
@{

    ViewData["Title"] = "News";
}
@section styles{
    <!--datatable css-->
    <link href="~/css/dx.light.css" rel="stylesheet" />
    <link href="~/lib/select2.min.css" rel="stylesheet" />
}
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Sport Events</h5>
            </div>
            <div class="card-body">
                <div id="newsGrid"></div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!--datatable js-->
    <script src="~/js/dx.all.js"></script>
    <script src="~/js/dx.aspnet.data.js"></script>
    <script src="~/lib/select2.min.js"></script>
    <script type="text/javascript">
        var $organizer = @Html.Raw(Json.Serialize(Model?.OrganizeDdl));
    </script>
    <script src="~/js/news-setting-page.js"></script>
}